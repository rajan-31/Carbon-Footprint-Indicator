{
    "name": "Carbon Footprint Indicator",
    "description": "Shows Carbon Footprint for Amazon Products",
    "version": "0.0.1",
    "manifest_version": 3,

    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["storage", "activeTab", "scripting"],

    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/images/CO2_16.png",
            "32": "/images/CO2_32.png",
            "48": "/images/CO2_48.png",
            "128": "/images/CO2_128.png"
        }
    },
    
    "icons": {
        "16": "/images/CO2_16.png",
        "32": "/images/CO2_32.png",
        "48": "/images/CO2_48.png",
        "128": "/images/CO2_128.png"
      }
  }